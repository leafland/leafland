---
layout: layouts/base.liquid
type: product
---

<div id="content">

    <div id="tree-name-block">

        {% if commonName != '' %}
        <h2 class="tree-common-name">{{ commonName }}</h2>
        {% else %}
        <h2 class="tree-common-name" style="display:none"></h2>
        {% endif %}

        <h1 class="tree-botanical-name">{{ tree.fullName }}</h1>

    </div>

    <div id="grid-content">

        <div id="grid-content-left">

            <div id="main-image">
            
                <div id="main-image-inner">
                
                    <img src="https://leafland.co.nz/cdn-cgi/image/format=auto,quality=75,width=700/https://files.leafland.co.nz/{{ mainImage }}" height="700" width="700" alt="{{ url | replace: '-', ' ' }}" loading="eager" class="main-img" style="opacity: 1;">
                
                </div>
            
            </div>

            <div class="images">

                <div class="image">

                    <img class="thumb-image" src="https://leafland.co.nz/cdn-cgi/image/format=auto,quality=75,width=75/https://files.leafland.co.nz/{{ mainImage }}" width="75" height="75" alt="{{ url | replace: '-', ' ' }}">

                </div>

                {% for image in tree.images %}
                
                <div class="image">

                    <img class="thumb-image" src="https://leafland.co.nz/cdn-cgi/image/format=auto,quality=75,width=75/https://files.leafland.co.nz/{{ image.src }}" width="75" height="75" alt="{{ image.alt }}" >
                    
                </div>

                {% endfor %}

            </div>

        </div>

        <div id="grid-content-right">

            <div id="tree-info">

                <div id="tree-info-description-icons">

                    <button id="open-stock-table">Order trees</button>

                    <p class="tree-description">{{ description }}</p>

                    <div id="extra-info">

                        <p class="extra-info"><span>10 Year Height:</span> {{tree.height}}</p>
                        <p class="extra-info"><span>10 Year Width:</span> {{tree.width}}</p>

                        {% if tree.reproduction.size > 0 %}

                            {% if tree.reproduction == 'monoecious' %}

                            <p class="extra-info"><span>Reproduction:</span> Monoecious, separate male and female flowers on the same tree.</p>

                            {% elsif tree.reproduction == 'dioecious' %}

                            <p class="extra-info"><span>Reproduction:</span> Dioecious, separate male and female flowers on separate trees.</p>

                            {% elsif tree.reproduction == 'hermaphroditic' %}

                            <p class="extra-info"><span>Reproduction:</span> Hermaphroditic, single flowers with both fully functional male and female parts on the same tree (also known as cosexual and perfect flowers).</p>

                            {% else %}

                            {% endif %}

                        {% endif %}

                    </div>

                    <div id="more-info">

                        {% if origin != "" and origin.length > 0 %}

                            <p>{{ origin | capitalize }}</p>

                        {% endif %}

                        {% if winterFoliage != "" and winterFoliage.length > 0 %}

                            <p>{{ winterFoliage | capitalize }}</p>

                        {% endif %}

                        {% if types != "" and types.length > 0 %}

                            {% assign typesArray = types | split: ', ' %}

                            {% for item in typesArray %}

                                <p>{{ item | replace: '-', ' ' | capitalize }}</p>

                            {% endfor %}

                        {% endif %}

                        {% if tolerates != "" and tolerates.length > 0 %}

                            {% assign toleratesArray = tolerates | split: ', ' %}

                            {% for item in toleratesArray %}

                                {% if item == 'drought' or item == 'heavy-rainfall' or item == 'light-frosts' or item == 'heavy-frosts' %}

                                    <p>{{ item | replace: '-', ' ' | capitalize }}</p>

                                {% else %}

                                    <p>{{ item | replace: '-', ' ' | capitalize }} sites</p>

                                {% endif %}

                            {% endfor %}

                        {% endif %}

                        {% if soilType != "" and soilType.length > 0 %}

                            {% assign soilArray = soilType | split: ', ' %}

                            {% for item in soilArray %}

                                <p>{{ item | replace: '-', ' ' | capitalize }}</p>

                            {% endfor %}

                        {% endif %}

                        {% if sunShade != "" and sunShade.length > 0 %}

                            {% assign sunArray = sunShade | split: ', ' %}

                            {% for item in sunArray %}

                                <p>{{ item | replace: '-', ' ' | capitalize }}</p>

                            {% endfor %}

                        {% endif %}

                        {% if uses != "" and uses.length > 0 %}

                            {% assign usesArray = uses | split: ', ' %}

                            {% for item in usesArray %}

                                {% if item contains '-' %}

                                    <p>{{ item | replace: '-', ' ' | capitalize }}</p>

                                {% else %}

                                    <p>{{ item | capitalize }}</p>

                                {% endif %}

                            {% endfor %}

                        {% endif %}

                    </div>

                    {% comment %} <div id="tree-icons">

                        {% if origin != "" and origin.length > 0 %}

                            <div class="icon-div">
                            
                                <img class="tree-icon" src="https://files.leafland.co.nz/icons/{{ origin }}.svg" width="40" height="40" alt="{{ origin }} tree">
                                <span class="tooltip">{{ origin | capitalize }}</span>
                            
                            </div>

                        {% endif %}

                        {% if winterFoliage != "" and winterFoliage.length > 0 %}

                            <div class="icon-div">
                            
                                <img class="tree-icon" src="https://files.leafland.co.nz/icons/{{ winterFoliage }}.svg" width="40" height="40" alt="{{ winterFoliage }} tree">
                                <span class="tooltip">{{ winterFoliage | capitalize }}</span>
                            
                            </div>

                        {% endif %}

                        {% if types != "" and types.length > 0 %}

                            {% assign typesArray = types | split: ', ' %}

                            {% for item in typesArray %}

                                <div class="icon-div">
                                
                                    <img class="tree-icon" src="https://files.leafland.co.nz/icons/{{ item }}.svg" width="40" height="40" alt="{{ item | replace: '-', ' ' }} tree">
                                    <span class="tooltip">{{ item | replace: '-', ' ' | capitalize }}</span>
                                
                                </div>

                            {% endfor %}

                        {% endif %}

                        {% if tolerates != "" and tolerates.length > 0 %}

                            {% assign toleratesArray = tolerates | split: ', ' %}

                            {% for item in toleratesArray %}

                                {% if item == 'drought' or item == 'heavy-rainfall' or item == 'light-frosts' or item == 'heavy-frosts' %}

                                    <div class="icon-div">
                                    
                                        <img class="tree-icon" src="https://files.leafland.co.nz/icons/{{ item }}.svg" width="40" height="40" alt="tolerates {{ item | replace: '-', ' ' }}">
                                        <span class="tooltip">Tolerates {{ item | replace: '-', ' ' }}</span>
                                    
                                    </div>

                                {% else %}

                                    <div class="icon-div">
                                    
                                        <img class="tree-icon" src="https://files.leafland.co.nz/icons/{{ item }}.svg" width="40" height="40" alt="tolerates {{ item | replace: '-', ' ' }} sites">
                                        <span class="tooltip">Tolerates {{ item | replace: '-', ' ' }} sites</span>
                                    
                                    </div>

                                {% endif %}

                            {% endfor %}

                        {% endif %}

                        {% if soilType != "" and soilType.length > 0 %}

                            {% assign soilArray = soilType | split: ', ' %}

                            {% for item in soilArray %}

                                <div class="icon-div">
                                
                                    <img class="tree-icon" src="https://files.leafland.co.nz/icons/{{ item }}.svg" width="40" height="40" alt="{{ item | replace: '-', ' ' }}">
                                    <span class="tooltip">{{ item | replace: '-', ' ' | capitalize }}</span>
                                
                                </div>

                            {% endfor %}

                        {% endif %}

                        {% if sunShade != "" and sunShade.length > 0 %}

                            {% assign sunArray = sunShade | split: ', ' %}

                            {% for item in sunArray %}

                                <div class="icon-div">
                                
                                    <img class="tree-icon" src="https://files.leafland.co.nz/icons/{{ item }}.svg" width="40" height="40" alt="{{ item | replace: '-', ' '}}">
                                    <span class="tooltip">{{ item | replace: '-', ' ' | capitalize }}</span>
                                
                                </div>

                            {% endfor %}

                        {% endif %}

                        {% if uses != "" and uses.length > 0 %}

                            {% assign usesArray = uses | split: ', ' %}

                            {% for item in usesArray %}

                                {% if item contains '-' %}

                                    <div class="icon-div">
                                    
                                        <img class="tree-icon" src="https://files.leafland.co.nz/icons/{{ item }}.svg" width="40" height="40" alt="{{ item | replace: '-', ' ' }}">
                                        <span class="tooltip">{{ item | replace: '-', ' ' | capitalize }}</span>
                                    
                                    </div>

                                {% else %}

                                    <div class="icon-div">
                                    
                                        <img class="tree-icon" src="https://files.leafland.co.nz/icons/{{ item }}.svg" width="40" height="40" alt="{{ item }}">
                                        <span class="tooltip">{{ item | capitalize }}</span>
                                    
                                    </div>

                                {% endif %}

                            {% endfor %}

                        {% endif %}

                    </div> {% endcomment %}

                </div>

            </div>

        </div>

    </div>

    <div id="grid-content-middle">

        <div id="features-table">

            <table>

                <tr>

                    <th></th>

                    <th>Stem</th>

                    <th>Foliage</th>

                    <th>Flowers</th>

                    <th>Fruit</th>
                
                </tr>


                <tr>

                    <th>Summer</th>

                    <td>

                        {% if tree.stem.summer.size > 0 %}

                        <div class="color-spans">

                            {% assign stemArray = tree.stem.summer | split: ', '%}

                            {% for color in stemArray %}

                                <span class="tree-color {{color}}"></span>

                            {% endfor %}

                        </div>

                        {% else %}

                        <div class="color-spans">

                        </div>

                        {% endif %}

                    </td>

                    <td>

                        {% if tree.foliage.summer.size > 0 %}

                        <div class="color-spans">

                            {% assign foliageArray = tree.foliage.summer | split: ', '%}

                            {% for color in foliageArray %}

                                <span class="tree-color {{color}}"></span>

                            {% endfor %}

                        </div>

                        {% else %}

                        <div class="color-spans">

                        </div>

                        {% endif %}

                    </td>

                    <td>

                        {% if tree.flowers.summer.size > 0 %}

                        <div class="color-spans">

                            {% assign flowerArray = tree.flowers.summer | split: ', '%}

                            {% for color in flowerArray %}

                                <span class="tree-color {{color}}"></span>

                            {% endfor %}

                        </div>

                        {% else %}

                        <div class="color-spans">

                        </div>

                        {% endif %}

                    </td>

                    <td>

                        {% if tree.fruit.summer.size > 0 %}

                        <div class="color-spans">

                            {% assign fruitingArray = tree.fruit.summer | split: ', '%}

                            {% for color in fruitingArray %}

                                <span class="tree-color {{color}}"></span>

                            {% endfor %}

                        </div>

                        {% else %}

                        <div class="color-spans">

                        </div>

                        {% endif %}

                    </td>
                
                </tr>

                <tr>

                    <th>Autumn</th>

                    <td>

                        {% if tree.stem.autumn.size > 0 %}

                        <div class="color-spans">

                            {% assign stemArray = tree.stem.autumn | split: ', '%}

                            {% for color in stemArray %}

                                <span class="tree-color {{color}}"></span>

                            {% endfor %}

                        </div>

                        {% else %}

                        <div class="color-spans">

                        </div>

                        {% endif %}

                    </td>

                    <td>

                        {% if tree.foliage.autumn.size > 0 %}

                        <div class="color-spans">

                            {% assign foliageArray = tree.foliage.autumn | split: ', '%}

                            {% for color in foliageArray %}

                                <span class="tree-color {{color}}"></span>

                            {% endfor %}

                        </div>

                        {% else %}

                        <div class="color-spans">

                        </div>

                        {% endif %}

                    </td>

                    <td>

                        {% if tree.flowers.autumn.size > 0 %}

                        <div class="color-spans">

                            {% assign flowerArray = tree.flowers.autumn | split: ', '%}

                            {% for color in flowerArray %}

                                <span class="tree-color {{color}}"></span>

                            {% endfor %}

                        </div>

                        {% else %}

                        <div class="color-spans">

                        </div>

                        {% endif %}

                    </td>

                    <td>

                        {% if tree.fruit.autumn.size > 0 %}

                        <div class="color-spans">

                            {% assign fruitingArray = tree.fruit.autumn | split: ', '%}

                            {% for color in fruitingArray %}

                                <span class="tree-color {{color}}"></span>

                            {% endfor %}

                        </div>

                        {% else %}

                        <div class="color-spans">

                        </div>

                        {% endif %}

                    </td>
                
                </tr>

                <tr>

                    <th>Winter</th>

                    <td>

                        {% if tree.stem.winter.size > 0 %}

                        <div class="color-spans">

                            {% assign stemArray = tree.stem.winter | split: ', '%}

                            {% for color in stemArray %}

                                <span class="tree-color {{color}}"></span>

                            {% endfor %}

                        </div>

                        {% else %}

                        <div class="color-spans">

                        </div>

                        {% endif %}

                    </td>

                    <td>

                        {% if tree.foliage.winter.size > 0 %}

                        <div class="color-spans">

                            {% assign foliageArray = tree.foliage.winter | split: ', '%}

                            {% for color in foliageArray %}

                                <span class="tree-color {{color}}"></span>

                            {% endfor %}

                        </div>

                        {% else %}

                        <div class="color-spans">

                        </div>

                        {% endif %}

                    </td>

                    <td>

                        {% if tree.flowers.winter.size > 0 %}

                        <div class="color-spans">

                            {% assign flowerArray = tree.flowers.winter | split: ', '%}

                            {% for color in flowerArray %}

                                <span class="tree-color {{color}}"></span>

                            {% endfor %}

                        </div>

                        {% else %}

                        <div class="color-spans">

                        </div>

                        {% endif %}

                    </td>

                    <td>

                        {% if tree.fruit.winter.size > 0 %}

                        <div class="color-spans">

                            {% assign fruitingArray = tree.fruit.winter | split: ', '%}

                            {% for color in fruitingArray %}

                                <span class="tree-color {{color}}"></span>

                            {% endfor %}

                        </div>

                        {% else %}

                        <div class="color-spans">

                        </div>

                        {% endif %}

                    </td>
                
                </tr>

                <tr>

                    <th>Spring</th>

                    <td>

                        {% if tree.stem.spring.size > 0 %}

                        <div class="color-spans">

                            {% assign stemArray = tree.stem.spring | split: ', '%}

                            {% for color in stemArray %}

                                <span class="tree-color {{color}}"></span>

                            {% endfor %}

                        </div>

                        {% else %}

                        <div class="color-spans">

                        </div>

                        {% endif %}

                    </td>

                    <td>

                        {% if tree.foliage.spring.size > 0 %}

                        <div class="color-spans">

                            {% assign foliageArray = tree.foliage.spring | split: ', '%}

                            {% for color in foliageArray %}

                                <span class="tree-color {{color}}"></span>

                            {% endfor %}

                        </div>

                        {% else %}

                        <div class="color-spans">

                        </div>

                        {% endif %}

                    </td>

                    <td>

                        {% if tree.flowers.spring.size > 0 %}

                        <div class="color-spans">

                            {% assign flowerArray = tree.flowers.spring | split: ', '%}

                            {% for color in flowerArray %}

                                <span class="tree-color {{color}}"></span>

                            {% endfor %}

                        </div>

                        {% else %}

                        <div class="color-spans">

                        </div>

                        {% endif %}

                    </td>

                    <td>

                        {% if tree.fruit.spring.size > 0 %}

                        <div class="color-spans">

                            {% assign fruitingArray = tree.fruit.spring | split: ', '%}

                            {% for color in fruitingArray %}

                                <span class="tree-color {{color}}"></span>

                            {% endfor %}

                        </div>

                        {% else %}

                        <div class="color-spans">

                        </div>

                        {% endif %}

                    </td>
                
                </tr>

            </table>

        </div>

        <div id="tree-info-tree-shape">

            <div id="tree-shape">

                <p class="paragraph-title">10 Year Size</p>

                <img id="tree-shape-image" src="https://files.leafland.co.nz/{{ treeShape }}" width="300" height="300" alt="tree shape">
                
                <div id="height-div">
                    <span class="arrow" id="arrow-up">↑</span>
                    <span id="height-span">{{tree.height}}</span>
                    <span class="arrow" id="arrow-down">↓</span>
                </div>

                <div id="width-div">
                    <span class="arrow" id="arrow-left">←</span>
                    <span id="width-span">{{tree.width}}</span>
                    <span class="arrow" id="arrow-right">→</span>
                </div>

            </div>

        </div>

    </div>

    <div id="taxonomy-section">
        <div id="taxonomy-section">

            <div id="taxonomy-inner">

            {% if tree.family.size > 0 %}
                        <section class="taxonomy-section">
                        {% if tree.taxonomyInformation.family.size > 0 %}
                            <h3>Family:</h3>
                            <p><span><i>{{ tree.family }}</i></span>, {{tree.taxonomyInformation.family}}</p>
                            {% else %}
                                <h3>Family:</h3>
                                <p><span><i>{{ tree.family }}</i></span></p>

                        {% endif %}
                        </section>
                    {% endif %}

                    {% if tree.genus.size > 0 %}
                        <section class="taxonomy-section">
                        {% if tree.taxonomyInformation.genus.size > 0 %}
                                <h3>Genus:</h3>
                                <p><span><i>{{ tree.genus }}</i></span>, {{tree.taxonomyInformation.genus}}</p>
                            {% else %}
                                <h3>Genus:</h3>
                                <p><span><i>{{ tree.genus }}</i></span></p>
                        {% endif %}
                        </section>
                    {% endif %}

                    {% if tree.species.size > 0 %}
                        <section class="taxonomy-section">
                        <h3>Species:</h3>
                        {% if tree.taxonomyInformation.species.size > 0 %}

                            

                                <p><span><i>{{ tree.genus }}</i> <i>{{ tree.species }}</i></span>, {{tree.taxonomyInformation.species}}</p>

                            

                            {% else %}

                            

                                <p><span><i>{{ tree.genus }}</i> <i>{{ tree.species }}</i></span></p>

                            

                        {% endif %}
                    </section>
                    {% endif %}


                    {% if tree.hybrid.size > 0 %}
                        <section class="taxonomy-section">
                        <h3>Hybrid Species:</h3>
                        {% if tree.hybrid contains ' x ' %}

                        {% assign text = tree.hybrid | split: ' x ' %}

                        {% assign newText = text | join: '</i> x <i>' %}

                            {% if tree.taxonomyInformation.hybrid.size > 0 %}

                            

                                <p><span><i>{{ tree.genus }}</i> <i>{{ newText }}</i></span>, {{tree.taxonomyInformation.hybrid}}</p>

                            

                            {% else %}

                            

                                <p><span><i>{{ tree.genus }}</i> <i>{{ newText }}</i></span></p>

                            

                            {% endif %}

                        {% else %}

                            {% if tree.taxonomyInformation.hybrid.size > 0 %}

                                

                                    <p><span><i>{{ tree.genus }}</i> x <i>{{ tree.hybrid }}</i></span>, {{tree.taxonomyInformation.hybrid}}</p>

                                

                                {% else %}

                                

                                    <p><span><i>{{ tree.genus }}</i> x <i>{{ tree.hybrid }}</i></span></p>

                                

                            {% endif %}

                        {% endif %}
                    </section>
                    {% endif %}


                    {% if tree.subspecies.size > 0 %}
                        <section class="taxonomy-section">
                        <h3>Subspecies:</h3>
                        {% if tree.taxonomyInformation.subspecies.size > 0 %}

                        

                            <p><span><i>{{ tree.genus }}</i> <i>{{ tree.species }}</i> subsp. <i>{{ tree.subspecies }}</i></span>, {{tree.taxonomyInformation.subspecies}}</p>

                        

                        {% else %}

                        

                            <p><span><i>{{ tree.genus }}</i> <i>{{ tree.species }}</i> subsp. <i>{{ tree.subspecies }}</i></span></p>

                        

                        {% endif %}
                    </section>
                    {% endif %}


                    {% if tree.variety.size > 0 %}
                        <section class="taxonomy-section">
                        <h3>Variety:</h3>
                        {% if tree.taxonomyInformation.variety.size > 0 %}

                        

                            <p><span><i>{{ tree.genus }}</i> <i>{{ tree.species }}</i> var. <i>{{ tree.variety }}</i></span>, {{tree.taxonomyInformation.variety}}</p>

                        

                        {% else %}

                        

                            <p><span><i>{{ tree.genus }}</i> <i>{{ tree.species }}</i> var. <i>{{ tree.variety }}</i></span></p>

                        

                        {% endif %}
                    </section>
                    {% endif %}


                    {% if tree.form.size > 0 %}
                        <section class="taxonomy-section">
                        <h3>Form:</h3>
                        {% if tree.taxonomyInformation.form.size > 0 %}

                        

                            <p><span><i>{{ tree.genus }}</i> <i>{{ tree.species }}</i> f. <i>{{ tree.form }}</i></span>, {{tree.taxonomyInformation.form}}</p>

                        

                        {% else %}

                        

                            <p><span><i>{{ tree.genus }}</i> <i>{{ tree.species }}</i> f. <i>{{ tree.form }}</i></span></p>

                        

                        {% endif %}
                    </section>
                    {% endif %}

                    {% if tree.cultivar.size > 0 %}
                        <section class="taxonomy-section">
                        <h3>Cultivar:</h3>
                        {% if tree.taxonomyInformation.cultivar.size > 0 %}

                            {% if tree.form.size > 0 %}

                            <p><span><i>{{ tree.genus }}</i> <i>{{ tree.species }}</i> f. <i>{{ tree.form }}</i> '{{ tree.cultivar }}'</span>, {{tree.taxonomyInformation.cultivar}}</p>

                            {% elsif tree.variety.size > 0 %}

                            <p><span><i>{{ tree.genus }}</i> <i>{{ tree.species }}</i> var. <i>{{ tree.variety }}</i> '{{ tree.cultivar }}'</span>, {{tree.taxonomyInformation.cultivar}}</p>

                            {% elsif tree.subspecies.size > 0 %}

                            <p><span><i>{{ tree.genus }}</i> <i>{{ tree.species }}</i> subsp. <i>{{ tree.subspecies }}</i> '{{ tree.cultivar }}'</span>, {{tree.taxonomyInformation.cultivar}}</p>

                            {% elsif tree.hybrid.size > 0 %}

                            {% if tree.hybrid contains ' x ' %}

                            {% assign text = tree.hybrid | split: ' x ' %}

                            {% assign newText = text | join: '</i> x <i>' %}

                            <p><span><i>{{ tree.genus }}</i> <i>{{ newText }}</i> '{{ tree.cultivar }}'</span>, {{tree.taxonomyInformation.cultivar}}</p>

                            {% else %}

                            <p><span><i>{{ tree.genus }}</i> x <i>{{ tree.hybrid }}</i> '{{ tree.cultivar }}'</span>, {{tree.taxonomyInformation.cultivar}}</p>

                            {% endif %}

                            {% else %}

                            <p><span><i>{{ tree.genus }}</i> <i>{{ tree.species }}</i> '{{ tree.cultivar }}'</span>, {{tree.taxonomyInformation.cultivar}}</p>

                            {% endif %}

                        {% else %}

                            {% if tree.form.size > 0 %}

                            <p><span><i>{{ tree.genus }}</i> <i>{{ tree.species }}</i> f. <i>{{ tree.form }}</i> '{{ tree.cultivar }}'</span></p>

                            {% elsif tree.variety.size > 0 %}

                            <p><span><i>{{ tree.genus }}</i> <i>{{ tree.species }}</i> var. <i>{{ tree.variety }}</i> '{{ tree.cultivar }}'</span></p>

                            {% elsif tree.subspecies.size > 0 %}

                            <p><span><i>{{ tree.genus }}</i> <i>{{ tree.species }}</i> subsp. <i>{{ tree.subspecies }}</i> '{{ tree.cultivar }}'</span></p>

                            {% elsif tree.hybrid.size > 0 %}

                            {% if tree.hybrid contains ' x ' %}

                            {% assign text = tree.hybrid | split: ' x ' %}

                            {% assign newText = text | join: '</i> x <i>' %}

                            <p><span><i>{{ tree.genus }}</i> <i>{{ newText }}</i> '{{ tree.cultivar }}'</span></p>

                            {% else %}

                            <p><span><i>{{ tree.genus }}</i> x <i>{{ tree.hybrid }}</i> '{{ tree.cultivar }}'</span></p>

                            {% endif %}

                            {% else %}

                            <p><span><i>{{ tree.genus }}</i> <i>{{ tree.species }}</i> '{{ tree.cultivar }}'</span></p>

                            {% endif %}

                        {% endif %}
                        </section>
                    {% endif %}

                    {% if tree.synonyms.size > 0 %}
                    <section class="taxonomy-section">
                    <h3>Synonyms:</h3>

                        {% assign newString = "" %}

                        {% for item in tree.synonyms %}

                        {% capture newItem %}{% endcapture %}

                        {% if item.cultivar.size > 0 %}

                            {% if item.form.size > 0 %}

                            {% capture newItem %}<i>{{ item.genus }}</i> <i>{{ item.species }}</i> f. <i>{{ item.form }}</i> '{{ item.cultivar }}'{% endcapture %}

                            {% elsif item.variety.size > 0 %}

