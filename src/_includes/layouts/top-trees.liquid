---
layout: layouts/base.liquid
type: top-trees
---

<div id="content">

    <h1>{{ title }}</h1>

    <div id="tree-wrapper">
    
    {% for tree in topTrees.trees %}

    <div class="tree-item">
    
        <div class="tree-image"><img src="https://leafland.co.nz/cdn-cgi/image/format=auto,quality=75,width=700/https://files.leafland.co.nz/{{ tree.mainImage }}" width="700" height="700" alt="{{ tree.url | replace: '-', ' ' }}">
        
        </div>
        
        <div class="title-link-box">
        
            <div class="title-container">
            
                <h2>{{ tree.botanicalName }}</h2>

                {% if tree.commonName != "" %}
                
                <h3>{{ tree.commonName }}</h3>

                {% endif %}
            
            </div>
            
            <a href="/trees/{{ tree.url }}/" class="tree-link button">View Tree</a>
        
        </div>
    
    </div>

    {% endfor %}
    
    </div>

</div>
